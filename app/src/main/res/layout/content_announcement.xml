<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.mnwd.mnwd.Announcement"
    tools:showIn="@layout/app_bar_announcement">

    <TextView
        android:id="@+id/idTxtAnnouncementDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="There are currently no announcements."
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:visibility="gone"
        android:textColor="@android:color/holo_blue_dark"/>

    <ListView
        android:id="@+id/listView_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

</RelativeLayout>